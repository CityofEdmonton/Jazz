{
    "name": "VIP Chat",
    "description": "Start chatting with an IT professional now.",
    "version": "1",
    "manifest_version": 2,
    "browser_action": {
        "default_title": "VIP Chat",
        "default_icon": "img/icon16.png"
    },
    "permissions": [
        "identity",
        "tabs",
        "storage",
        "http://*/*",
        "https://*/*"
    ],
    "content_scripts": [
        {
          "matches": ["http://*/*", "https://*/*"],
          "js": ["src/extension/init.js"]
        }
      ], 
    "background": {
        "scripts": ["src/extension/background.js"],
        "persistent": false
    },
    "web_accessible_resources": [
        "src/app/livechat.html"
    ],
    "content_security_policy": "script-src 'self'; object-src 'self'"
}
