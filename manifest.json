{
    "name": "VIP Chat",
    "description": "Start chatting with an IT professional now.",
    "version": "10",
    "manifest_version": 2,
    "browser_action": {
        "default_title": "VIP Chat",
        "default_icon": "img/icon16.png"
    },
    "permissions": [
        "identity",
        "identity.email",
        "tabs",
        "storage",
        "http://*/*",
        "https://*/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "http://*/*",
                "https://*/*"
            ],
            "js": [
                "src/extension/inject.js"
            ]
        }
    ],
    "background": {
        "scripts": [
            "src/extension/background.js"
        ],
        "persistent": false
    },
    "web_accessible_resources": [
        "src/app/livechat.html",
        "src/extension/tracking.js"
    ],
    "content_security_policy": "script-src 'self' https://cdn.livechatinc.com; object-src 'self'"
}