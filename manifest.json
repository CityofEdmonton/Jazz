{
    "name": "VIP Chat",
    "description": "Start chatting with an IT professional now.",
    "version": "10",
    "manifest_version": 2,
    "browser_action": {
        "default_title": "VIP Chat",
        "default_icon": "img/icon16.png",
        "default_popup": "src/extension/pop-up.html"
    },
    "permissions": [
        "identity",
        "identity.email",
        "tabs",
        "storage",
        "http://*/*",
        "https://*/*"
    ],
    /* "content_scripts": [ // Not needed in pop-up version
        {
            "matches": [ */
                //"http://*/*",
                //"https://*/*"
            /* ],
            "js": [
                "src/extension/inject.js"
            ]
        }
    ], */
    "background": {
        "page": "src/extension/background.html"
    },
    "web_accessible_resources": [
        "src/app/livechat.html",
        "src/extension/tracking.js"
    ],
    "content_security_policy": "script-src 'self' https://cdn.livechatinc.com https://secure.livechatinc.com https://unpkg.com/@livechat/; object-src 'self'" // secure.livechatinc.com needs to be added too
}