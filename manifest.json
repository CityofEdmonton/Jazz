{
    "name": "Jazz",
    "description": "A speedy, one-stop help desk, for all VIP clients at the City of Edmonton.",
    "version": "16",
    "manifest_version": 2,
    "browser_action": {
        "default_title": "Jazz",
        "default_icon": {
            "16": "img/circle-j-64.png",
            "32": "img/circle-j-64.png"
        },
        "default_popup": "src/extension/pop-up.html"
    },
    "icons": { "16": "img/jazz-16.png",
        "32": "img/jazz-32.png",
        "48": "img/jazz-48.png",
       "128": "img/jazz-128.png" },
    "permissions": [
        "identity",
        "identity.email",
        "tabs",
        "storage",
        "http://*/*",
        "https://*/*"
    ],
    "background": {
        "page": "src/extension/background.html"
    },
    "web_accessible_resources": [
        "src/app/livechat.html",
        "src/extension/tracking.js"
    ],
    "content_security_policy": "script-src 'self' https://*.opendns.com https://*.livechatinc.com; object-src 'self'"
}